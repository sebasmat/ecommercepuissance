<html>
<head>
  <title>Mas información</title>
</head>
<div class="card mb-4 py-3 border-left-info">
  <h3>&nbsp;&nbsp;<%= @celular.producto.marca %></h3>
  <div class="row card-body">
    <div class="col col-lg-4">
      <img src="../<%= @celular.producto.imagen %>" alt="Ciencia1" style="width:200px;height:250px;margin-left:30px;">
    </div>
    <div class="col col-lg-8">
      <h4>Linea:&nbsp<%= @celular.producto.linea %></h4>
      <hr>
      <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="detalles" role="tabpanel" aria-labelledby="detalles-tab">
          <b>Tipo de Red:</b> <%= @celular.computo.tipoRed%><br>
          <b>RAM: </b> <%= @celular.computo.RAM %> <br>
          <b>Almacenamiento: </b> <%= @celular.computo.almacenamiento%> <br>
          <b>Procesador: </b> <%= @celular.computo.almacenamiento%> <br>
          <b>Precio:</b><%= @celular.producto.precio %> <br>
          <hr>
        </div>
      </div>
    </div>
    <div class="row card-body justify-content-end">
      <form>
        <button class="btn btn-danger btn-icon-split" action="../Libros.html">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
          <span class="text">Cancelar</span>
        </button>
        <button class="btn btn-success btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-shopping-cart"></i>
                                    </span>
          <span class="text">Añadir al carrito</span>
        </button>
      </form>
    </div>
  </div>
</div>